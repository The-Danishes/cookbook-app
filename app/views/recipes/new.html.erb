<%= form_tag "/recipe_saved", method: :post do %>
  <div>
    <%= label_tag :title, "Recipe Title:" %>
    <%= text_field_tag :title %>
  </div>

  <div>
    <%= label_tag :chef %>
    <%= text_field_tag :chef %>
  </div>

  <div>
    <%= label_tag :ingredients %>
    <%= text_field_tag :ingredients %>
  </div>

  <div>
    <%= label_tag :directions %>
    <%= text_field_tag :directions %>
  </div>

  <div>
    <%= submit_tag "Create Recipe!" %>
  </div>
<% end %>